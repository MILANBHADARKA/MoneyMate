


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit User Details</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/css/loader.css">
</head>
<body class="bg-gray-100 min-h-screen flex items-center justify-center">

        <!-- Loading Overlay -->
        <div id="loadingOverlay" class="fixed inset-0 flex items-center justify-center bg-black bg-opacity-50 z-50 hidden">
            <div class="modern-spinner">
                <div></div>
                <div></div>
                <div></div>
                <div></div>
            </div>
        </div>

    <div class="bg-white shadow-lg rounded-lg p-8 max-w-md w-full">
        <h1 class="text-3xl font-semibold text-center mb-6">Edit User</h1>

        <!-- Edit User Form -->
        <form id="edituserform" action="/edituser/<%= user._id %>" method="post" class="space-y-4">
            <!-- Username Input -->
            <input 
                type="text" 
                autocomplete="off"
                name="newusername" 
                class="w-full p-3 border border-gray-300 rounded-md focus:outline-none focus:border-blue-500" 
                value="<%= user.username %>" 
                required
            >

            <!-- Submit Button -->
            <button type="submit" class="w-full py-3 bg-blue-500 text-white font-semibold rounded-md hover:bg-blue-600 transition duration-300">Edit User</button>
        </form>

        <!-- Error and Success Messages -->
        <div class="mt-4 text-center">
            <% if (typeof error !== 'undefined') { %>
              <p class="text-danger font-semibold"><%= error %></p>
            <% } %>
            <% if (typeof success !== 'undefined') { %>
              <p class="text-secondary font-semibold"><%= success %></p>
            <% } %>
        </div>

        <!-- Back Button -->
        <div class="mt-4 text-center">
            <a href="/profile" class="text-blue-500 hover:underline">Back to Profile</a>
        </div>
    </div>

    <script src="/js/app.js"></script>
    <script>
        // JavaScript to handle loading spinner display on form submission
        document.getElementById('edituserform').addEventListener('submit', function(event) {
            // Show the loading overlay
            document.getElementById('loadingOverlay').classList.remove('hidden');

            // Disable the form submit button to prevent multiple submissions
            document.querySelector('button[type="submit"]').disabled = true;
        });
    </script>
</body>
</html>
